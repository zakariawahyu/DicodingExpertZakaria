<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativ"
    android:background="@drawable/widget_background"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_widget_poster"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:src="@drawable/ic_launcher_background"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Avenger"
        style="@style/ItemNameDetail"
        android:layout_marginStart="15dp"
        android:textColor="@android:color/white"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/item_detail_margin"
        android:layout_toEndOf="@id/img_widget_poster"/>

    <TextView
        android:id="@+id/tvitemDeskripsiwidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@id/img_widget_poster"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:maxWidth="250dp"
        android:maxLines="4"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        tools:text="As the Avengers and their allies have continued to protect the world from threats too large for any one hero to handle, a new danger has emerged from the cosmic shadows: Thanos. A despot of intergalactic infamyâ€¦" />
</RelativeLayout>