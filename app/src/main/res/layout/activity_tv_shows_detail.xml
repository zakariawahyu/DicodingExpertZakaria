<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tvshows.TvShowsDetail">

    <ImageView
        android:id="@+id/tvPosterTvShows"
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/poster_avengerinfinity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvJudulTvShows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="28dp"
        android:text="Avengers: Infinity War"
        android:textColor="#2E3691"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvPosterTvShows"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTanggalTvShows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="April 15, 2018"
        android:textColor="#2E3691"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/tvPosterTvShows"
        app:layout_constraintTop_toBottomOf="@+id/tvJudulTvShows" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/overview"
        android:textColor="#9A9A9A"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvPosterTvShows"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDeskripsiTvShows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:lineSpacingExtra="4dp"
        android:text="As the Avengers and their allies have continued to protect the world from threats too large for any one hero to handle, a new danger has emerged from the cosmic shadows: Thanos. A despot of intergalactic infamyâ€¦"
        android:textColor="#9A9A9A"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tvOverview"
        tools:layout_editor_absoluteX="71dp" />

</androidx.constraintlayout.widget.ConstraintLayout>